<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#000000">

    <ImageView
        android:id="@+id/emp_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/comercial" />

    <TextView
        android:id="@+id/emp_nome"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/emp_logo"
        android:gravity="center_vertical"
        android:text="Nome Empresa"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/emp_data"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/emp_nome"
        android:gravity="center"
        android:text="Data Visita"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/emp_nome"
        android:background="#FFFFFF"></View>

</RelativeLayout>
